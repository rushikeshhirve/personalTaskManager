<%- include('partials/header') %>
<div class="">
    <%- include('partials/titlebox') %>

        <div class="bottom-container">
            <h4>Sign in for a personalized task management journey.</h4>

            <ul>
                <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                <li><%= error.message %></li>
                <% }) %> <% } %>
              </ul>

            <div class="square">
                
                <form action="/register" method="POST">
                    <div>
                        <input type="text" id="name" name="name" placeholder="Name" class="in m-2" required />
                    </div>
                    <div>
                        <input type="email" id="email" name="email" placeholder="Email" class="in m-2" required />
                    </div>
                    <div>
                        <input type="password" id="password" name="password" placeholder="Password" class="in m-2" required />
                    </div>
                    <div>
                        <input type="password" id="password2" name="password2" placeholder="Confirm Password" class="in m-2" required />
                    </div>
                    <div>
                        <input type="submit" value="Register" class="btn btn-outline-dark button-89 m-2"/>
                    </div>
            
                    <a href="/login" class="m-2">Already registered? Login here</a>
                </form>

            </div>
        </div>

</div>


<%- include('partials/footer') %>